<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vladimir.a04_01_18_home_work.View">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="26dp"
        android:layout_margin="16dp"
        android:id="@+id/name_output"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="26dp"
        android:layout_margin="16dp"
        android:layout_below="@id/name_output"
        android:id="@+id/phone_output"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="26dp"
        android:layout_below="@id/phone_output"
        android:layout_margin="16dp"
        android:id="@+id/email_output"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textSize="26dp"
        android:layout_below="@id/email_output"
        android:layout_margin="16dp"
        android:id="@+id/description_output"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/back_to_view_btn"
        android:layout_margin="16dp"/>
</RelativeLayout>
